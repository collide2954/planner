<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="600"
        x:Class="app.MainWindow"
        Title="Planner"
        Width="400" Height="500"
        Background="#232629"
        WindowStartupLocation="CenterScreen"
        CanResize="False">
    <Window.Styles>
        <Style Selector="ToolTip">
            <Setter Property="Background" Value="#232629"/>
            <Setter Property="Foreground" Value="#26a269"/>
            <Setter Property="BorderBrush" Value="#4f5b62"/>
        </Style>
        <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
            <Setter Property="Foreground" Value="#26a269"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0:0:0.2" Easing="CircularEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="TextBox /template/ Border#PART_BorderElement">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" Easing="CircularEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#31363b"/>
            <Setter Property="BorderBrush" Value="#26a269"/>
        </Style>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#31363b"/>
            <Setter Property="BorderBrush" Value="#26a269"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style Selector="TextBox:pressed /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#31363b"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Name="PART_ButtonBorder" 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter Name="PART_ContentPresenter"
                                        Content="{TemplateBinding Content}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        Padding="{TemplateBinding Padding}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2" Easing="CircularEaseOut"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2" Easing="CircularEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Background" Value="#4f5b62"/>
            <Setter Property="BorderBrush" Value="#4f5b62"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>
    </Window.Styles>
    <Grid RowDefinitions="*,Auto">
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16" Width="320">
            <TextBlock Text="Planner" FontSize="28" FontWeight="Bold" Foreground="#ECECEC" HorizontalAlignment="Center"/>
            <TextBox Name="UsernameBox" Watermark="Username" Background="#31363b" Foreground="#ECECEC" BorderBrush="#4f5b62"/>
            <TextBox Name="PasswordBox" Watermark="Password" Background="#31363b" Foreground="#ECECEC" BorderBrush="#4f5b62" PasswordChar="●"/>
            <Button Name="LoginButton" 
                    Content="Login" 
                    Background="#3584e4" 
                    Foreground="#ECECEC" 
                    BorderBrush="#3584e4" 
                    Padding="10,4"
                    IsEnabled="False"/>
        </StackPanel>
        
        <Border Grid.Row="1" Padding="12" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Panel Name="ServerStatus" 
                   Width="28" Height="28" 
                   ToolTip.Tip="Server Offline">
                <TextBlock Text="x" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Foreground="#c01c28" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
            </Panel>
        </Border>
    </Grid>
</Window>
